<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.landing.user.UserScreenFragment"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/authorDetailsUserAvatar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_outline_info_24"/>

        <TextView
            android:id="@+id/authorDetailsUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/authorDetailsRepoCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repositories count:"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/authorDetailsRepoCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/authorDetailsFollowersLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers:"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/authorDetailsFollowers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/authorDetailsRepoJoinedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joined:"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/authorDetailsJoined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/authorDetailsUpdatedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated:"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/authorDetailsUpdated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/seeMoreUserTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See more"
        android:padding="10dp"
        android:textColor="#05c5cf"
        android:textStyle="bold" />

</LinearLayout>